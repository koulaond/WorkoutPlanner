<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="appLabel">
        <item name="android:fontFamily">@font/armata</item>
        <item name="android:text">@string/screen_welcome_title</item>
        <item name="android:textSize">36sp</item>
        <item name="android:textColor">@color/mainTitleText</item>
        <item name="android:background">@drawable/main_label</item>
        <item name="android:layout_marginBottom">60dp</item>
        <item name="android:textAlignment">center</item>
        <item name="android:layout_height">55dp</item>
        <item name="android:layout_marginLeft">16dp</item>
        <item name="android:layout_marginRight">16dp</item>
        <item name="android:gravity">center_vertical</item>
    </style>

    <style name="appSubLabel">
        <item name="android:fontFamily">@font/armata</item>
        <item name="android:text">@string/screen_welcome_subtitle</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textAlignment">center</item>
        <item name="android:layout_height">30dp</item>
        <item name="android:textColor">@color/labelText</item>
    </style>

    <style name="menuLabel">
        <item name="android:fontFamily">@font/armata</item>
        <item name="android:textSize">24sp</item>
        <item name="android:textColor">@color/labelText</item>
        <item name="android:textAlignment">center</item>
    </style>

    <style name="appButton">
        <item name="android:fontFamily">@font/droid_sans_bold</item>
        <item name="android:background">@drawable/button_unchecked</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
    </style>

    <style name="appButtonSmall">
        <item name="android:fontFamily">@font/droid_sans_bold</item>
        <item name="android:background">@drawable/button_small_unchecked</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
    </style>

    <style name="wizard_number">
        <item name="android:fontFamily">@font/armata</item>
        <item name="android:textSize">64sp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:textColor">@color/labelText</item>
        <item name="android:textAlignment">center</item>
    </style>

    <style name="wizard_label">
        <item name="android:fontFamily">@font/droid_sans_bold</item>
        <item name="android:textSize">48sp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:textColor">@color/labelText</item>
        <item name="android:textAlignment">center</item>
    </style>

    <style name="input_field_white">
        <item name="android:fontFamily">@font/droid_sans_bold</item>
        <item name="android:textSize">16sp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:textColor">@color/inputFieldWhite</item>
        <item name="android:backgroundTint">@color/inputFieldWhite</item>
        <item name="android:hint">@string/placeholder_exercise_name</item>
    </style>

    <style name="spinner_theme">>
        <item name="colorAccent">@color/inputFieldWhite</item>
        <item name="colorControlNormal">@color/inputFieldWhite</item>
    </style>

    <style name="numberInput">
        <item name="android:backgroundTint">@color/inputFieldWhite</item>
        <item name="android:textColor">@color/inputFieldWhite</item>
        <item name="android:textSize">24sp</item>
    </style>

    <style name="input_field_multiline">
        <item name="android:fontFamily">@font/armata</item>
        <item name="android:textSize">16sp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:textColor">@color/inputFieldWhite</item>
        <item name="android:backgroundTint">@color/inputFieldWhite</item>
        <item name="android:hint">@string/placeholder_exercise_name</item>
        <item name="android:background">@drawable/multiline_border</item>
    </style>
</resources>
